### JAIME ROOS ###
jaime_ID <- spotifyr::search_spotify("Jaime Roos", type = "artist")$id

canciones_jaime <- get_artist_audio_features(artist = 'Jaime Roos', include_groups = "album")

canciones %>% 
  group_by(key_mode) %>% 
  summarise(total = n()) %>% 
  arrange(desc(total))



### DIVIDIDOS ###
divididos_ID <- spotifyr::search_spotify("Divididos", type = "artist")$id

